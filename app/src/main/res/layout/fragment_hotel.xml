<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1066dp"
        android:layout_gravity="clip_vertical"
        android:background="#F6F6F9"
        tools:context=".ui.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <Button
                android:id="@+id/choiceRoom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape4"
                android:gravity="center"
                android:text="@string/vibor_nomera"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:theme="@style/Button.White"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:background="@drawable/shape2"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/hotelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/Hotel"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="366dp"
                android:layout_height="250dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="104dp"
                android:background="@drawable/shape3"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.206"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/image_20" />

            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="374dp"
                android:background="@drawable/shape"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:id="@+id/starTextView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/baseline_star_24"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/prefectTextView"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:gravity="center|center_horizontal|left"
                    android:radius="100dp"
                    android:text="@string/_5"
                    android:textColor="#FFA800"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <TextView
                android:id="@+id/steigenbergerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="416dp"
                android:text="@string/steigenberger_makadi"
                android:textColor="#000000"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/placeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="452dp"
                android:text="@string/place"
                android:textColor="#0D72FF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="480dp"
                android:text="@string/price"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/forTurTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="496dp"
                android:text="@string/forTur"
                android:textColor="#828796"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/priceTextView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="428dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <TextView
                android:id="@+id/aboutHotelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/aboutHotel"
                android:textColor="#000000"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutHotelTextView">

                <TextView
                    android:id="@+id/LineTextView"
                    android:layout_width="92dp"
                    android:layout_height="29dp"
                    android:background="@drawable/shape3"
                    android:gravity="center"
                    android:text="@string/Line"
                    android:textColor="#828796"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doAirTextView"
                    android:layout_width="168dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/LineTextView"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape3"
                    android:gravity="center"
                    android:text="@string/doAir"
                    android:textColor="#546E7A"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/wifiTextView"
                    android:layout_width="196dp"
                    android:layout_height="29dp"
                    android:layout_toEndOf="@+id/LineTextView"
                    android:background="@drawable/shape3"
                    android:gravity="center"
                    android:text="@string/wi_fi"
                    android:textColor="#828796"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doPlazaTextView"
                    android:layout_width="126dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/wifiTextView"
                    android:layout_toEndOf="@+id/doAirTextView"
                    android:background="@drawable/shape3"
                    android:gravity="center"
                    android:text="@string/doPlazy"
                    android:textColor="#828796"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/hoteDiscriptionTextView"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:text="@string/hoteDiscription"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/reletiv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

            <RelativeLayout
                android:id="@+id/reletiv"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/shape3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="65dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/AllAddImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/tick" />

                    <TextView
                        android:id="@+id/SoomeNeedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/AllAddImageView"
                        android:text="@string/SomeNeed"
                        android:textColor="#828796"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/whatAddTextView"
                        app:layout_constraintTop_toBottomOf="@+id/whatAddTextView" />

                    <TextView
                        android:id="@+id/whatAddTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/SoomeNeedTextView"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/SoomeNeedTextView"
                        android:text="@string/WhatAdd"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/AllAddImageView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/round_keyboard_arrow_ImageView14"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/round_keyboard_arrow_right_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/emojiHappyImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/emoji_happy" />

                    <TextView
                        android:id="@+id/someNeedtextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/emojiHappyImageView"
                        android:text="@string/SomeNeed"
                        android:textColor="#828796"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/UdobstvaTextView14"
                        app:layout_constraintTop_toBottomOf="@+id/UdobstvaTextView14" />

                    <TextView
                        android:id="@+id/UdobstvaTextView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/someNeedtextView2"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/someNeedtextView2"
                        android:text="@string/Udobstva"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/emojiHappyImageView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/round_keyboard_arrow_right_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="127dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/closeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/close" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/closeImageView"
                        android:text="@string/SomeNeed"
                        android:textColor="#828796"
                        app:layout_constraintStart_toStartOf="@+id/NotAddTextView"
                        app:layout_constraintTop_toBottomOf="@+id/NotAddTextView" />

                    <TextView
                        android:id="@+id/NotAddTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView32"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/textView32"
                        android:text="@string/WhotNoAdd"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/closeImageView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView35"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:importantForAccessibility="no"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/round_keyboard_arrow_right_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>